{{ template "base" . }}

{{ define "title" }}Todo List [WIP]{{ end }}

{{ define "content" }}
    <ul class="todos">
        <form action="/" method="post">
            <input name="todo-input" type="text" class="todo-input" />
            <button type="submit" class="todo-add">Add</button>
        </form>
        {{ with .UserTodo }}
            {{ range .TodoEntries }}
                <div class="todo">
                    <input class="todo-check" type="checkbox" />
                    <li class="todo-text">{{ .Body }}</li>
                    <!-- <form action="/" method="update"> -->
                    <button type="button" class="todo-edit">edit</button>
                    <!-- </form> -->
                    <!-- <form action="/" method="delete"> -->
                    <button type="button" class="todo-remove">remove</button>
                    <!-- </form> -->
                </div>
            {{ else }}
                <p>There is nothing here ;)</p>
            {{ end }}
        {{ end }}
    </ul>
{{ end }}
